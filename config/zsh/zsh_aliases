alias zshconfig="nvim ~/.zshrc"
alias zshsource="source ~/.zshrc"

# Force History
alias history="history 0"

# Custom Functions
alias q='function _go() {mkdir -p "$1" && cd "$1" }; _go'
alias fuck='function _fuck() {rm -rf "$1"}; _fuck'
alias cop='function _cop() {cat $1 | xclip -sel c}; _cop'

# Shortcuts
alias e='exit'
alias c='clear'
alias cl='clear && ls'

# LS Shortcuts
alias ll="ls -l"
alias la="ls -A"
alias l="ls -CF"
alias li="ls -lisah"
