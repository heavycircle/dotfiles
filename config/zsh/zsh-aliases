#!/usr/bin/env zsh

# A list of bash command remaps and additional shortcuts I use to
# make my coding experience faster.

# ZSH config edits
alias zsrc='source ~/.zshrc'
alias zedit='$EDITOR ~/.zshrc'

# Rebind ls to eza
alias ls='eza -l --group-directories-first --icons=auto'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'

# Color rebinds
alias grep='grep --color=auto'
alias ff="fzf --preview 'bat --style=numbers --color=always {}'"

# Flag rebinds
alias fzf='fzf --tmux'
alias shfmt='shfmt -ci -i=4'

# Remaps
alias sl='ls'

# Shortcuts
alias e='exit'
alias c='clear'
alias cl='clear && ls'
alias r="ranger"
alias nv='nvim $(fzf)'
alias vinit='python3 -m venv .venv'
alias venv='source .venv/bin/activate'

alias mnt='cd /mnt/c/Users/student/ || return $?'

# Simple functions
q() { mkdir "$1" && cd "$1" || return $?; }
root() { cd "$(tmux display-message -p '#{session_path}')" || return $?; }
